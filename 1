interface Gallery_ButtonProps {
	show: (id: string) => void;
	img: string;
	name: string;
}
const Gallery_AB = ({ name, img, show }: Gallery_ButtonProps) => {
	const handleDivClick = () => {
		show(name)
	}
	return (
		<div className="mx-5 mt-5 border-solid bg-begie-100" onClick={handleDivClick}>
			<img className="rounded-lg bg-cover h-[100px]" src={img} alt="" />
			<div className="flex flex-row justify-between items-start mt-4">
				<div>
					<p className="text-sm text-gray-800 font-bold">{name}</p>
				</div>
				<div className="flex flex-row items-center">
				</div>
			</div>
		</div>

	)

}


export default Gallery_AB;
